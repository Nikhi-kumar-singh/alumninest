    body {
        background: radial-gradient(circle at 10% 20%, rgb(40, 50, 60) 0%, rgb(0, 0, 0) 90%);
    }

    h3 {
      text-align: center;
      font-weight: bold;
      color: #fff; /* Changed header text color to white */
    }

    .group-card {
      background-color: #000000; /* Navy blue background for the cards */
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      height: 170px; /* Fixed height for equal sizing */
      color: #fff; /* Changed text color to white */
      border-radius: 10px; /* Rounded corners */
    }

    .group-card:hover {
      transform: translateY(-5px);
      animation: glowing-shadow 1.5s infinite alternate; /* Applying glowing shadow effect on hover */
    }

    @keyframes glowing-shadow {
      0% {
        box-shadow: 0 0 10px rgba(0, 255, 255, 0.5), 0 0 20px rgba(0, 255, 255, 0.5);
      }
      100% {
        box-shadow: 0 0 20px rgba(0, 255, 255, 1), 0 0 40px rgba(0, 255, 255, 0.5);
      }
    }

    .action-btn {
      background-color: #007bff;
      border: none;
      margin: 2px;
      transition: background-color 0.3s ease;
    }

    .action-btn:hover {
      background-color: #0056b3;
    }
