<body>
<div class="container my-5"> 
    <div class="row">
        <!-- Already Joined Groups Section -->
        <div class="col-md-6" id="joined-groups">
          <h3 class="mb-4" style="color: #007bff;">All Alumni</h3>
          <!-- Card 1 -->
          <% for (const alumni of allAlumni) { %>
            <div class="card mb-3 group-card" style="max-width: 540px;">
              <div class="row g-0">
                <div class="col-md-4">
                  <div class="card-img-circle">
                    <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="Group Image" class="img-fluid">
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title"><%= ${alumni.name.first_name} ${alumni.name.last_name} %></h5>
                    <p class="card-text"><strong>Role:</strong>Software Developer</p>
                    <p class="card-text"><strong>Companies Worked At:</strong> Google , TCS</p>

                    <p class="card-text"><%= alumni.job_title %></p>
                    <p class="card-text"><%= alumni.company %></p>
                    <button class="btn btn-primary action-btn">View More</button>
                    <!-- Uncomment these buttons if needed -->
                    <!-- 
                    <button class="btn btn-secondary action-btn">Connect</button>
                    
                    <button class="btn btn-primary action-btn">Chat</button> 
                    
